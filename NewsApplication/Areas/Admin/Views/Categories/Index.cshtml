@using NewsApplication.Models
@model IEnumerable<Category>

@{
    Layout="~/Views/Shared/_Admin.cshtml";
    ViewBag.Title ="ادارة التصنيفات";
    ViewBag.BoxTitle = "عرض التصنيفات";
}

<div>
    <a asp-action="ُCreate" class="btn btn-primary text-white" asp-controller="Categories">جديد</a>
</div>
<br />

<table class="table table-bordered table-hover"> 

    <tr>
        <th>@Html.DisplayNameFor(x=>x.Id)</th>
        <th>@Html.DisplayNameFor(x=>x.Name)</th>
        <th>@Html.DisplayNameFor(x=>x.Description)</th>
        <th>العمليات</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>
            <a asp-action="ُEdit" class="btn btn-success text-white" asp-controller="Categories" asp-route-id="@item.Id">تعديل</a>
            <a asp-action="ُDelete" class="btn btn-danger text-white" asp-controller="Categories" asp-route-id="@item.Id">حدف</a>
        </td>
        </tr> 
    }
   

</table>
